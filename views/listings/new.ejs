<% layout("/layouts/boilerplate") %>

    <div class="row mt-3">
        <div class="col-11 col-md-9 col-lg-8 mx-auto">

            <h3 class="text-center mb-4">Create a New Listing</h3>

            <div class="card shadow-sm border-0">
                <div class="card-body p-4">
                    <form method="POST" action="/listings" novalidate class="needs-validation"
                        enctype="multipart/form-data">

                        <div class="mb-3">
                            <label for="title" class="form-label">Title</label>
                            <input type="text" name="listing[title]"
                                class="form-control border border-2 border-secondary rounded-2"
                                placeholder="Enter catchy title" required>
                            <div class="invalid-feedback">Please Enter a Catchy Title!</div>
                        </div>

                        <div class="mb-3">
                            <label for="description" class="form-label">Description</label>
                            <textarea name="listing[description]"
                                class="form-control border border-2 border-secondary rounded-2" required></textarea>
                            <div class="invalid-feedback">Please Enter a Short Description!</div>
                        </div>

                        <div class="mb-3">
                            <label for="image" class="form-label">Upload Listing Image</label>
                            <input type="file" name="listing[image]"
                                class="form-control border border-2 border-secondary rounded-2">
                        </div>

                        <div class="mb-3">
                            <label for="category" class="form-label">Category</label>
                            <select name="listing[category]"
                                class="form-select border border-2 border-secondary rounded-2" required>
                                <option value="" selected disabled>Select a category</option>
                                <option value="whole_place">Whole Place</option>
                                <option value="cozy_rooms">Cozy Rooms</option>
                                <option value="urban_stays">Urban Stays</option>
                                <option value="beach_vibes">Beach Vibes</option>
                                <option value="mountain_escapes">Mountain Escapes</option>
                                <option value="nature_nooks">Nature Nooks</option>
                                <option value="poolside_stays">Poolside Stays</option>
                                <option value="eco_retreats">Eco Retreats</option>
                                <option value="family_favs">Family Favs</option>
                                <option value="other_stays">Other Stays</option>
                            </select>
                            <div class="invalid-feedback">Please select a category!</div>
                        </div>

                        <div class="row">
                            <div class="mb-3 col-md-4">
                                <label for="price" class="form-label">Price</label>
                                <input type="number" name="listing[price]"
                                    class="form-control border border-2 border-secondary rounded-2"
                                    placeholder=&#8377;7,200 required>
                                <div class="invalid-feedback">Please Enter a Valid Price!</div>
                            </div>

                            <div class="mb-3 col-md-8">
                                <label for="country" class="form-label">Country</label>
                                <input type="text" name="listing[country]"
                                    class="form-control border border-2 border-secondary rounded-2" placeholder="India"
                                    required>
                                <div class="invalid-feedback">Please Enter the Country name!</div>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label for="location" class="form-label">Location</label>
                            <input type="text" name="listing[location]"
                                class="form-control border border-2 border-secondary rounded-2"
                                placeholder="Pune, Maharashtra" required>
                            <div class="invalid-feedback">Please Enter the Location!</div>
                        </div>

                        <button class="btn btn-dark add-btn mt-3 w-100 py-2">Add Listing</button>

                    </form>
                </div>
            </div>
            <br><br>
        </div>
    </div>
    <script src="/js/script.js"></script>