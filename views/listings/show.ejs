<% layout("/layouts/boilerplate") -%>

    <div class="row mt-3">
        <div class="col-12 col-md-10 offset-md-1 col-lg-8 offset-lg-2">

            <h2 class="text-center mb-4 fw-bold font-monospace">
                <%= listing.title %>
            </h2>

            <div class="card listing-card mx-auto show-card border-0 shadow-sm" style="overflow: hidden;">
                <img src="<%= listing.image.url %>" class="card-img-top show-img" alt="listing_image">

                <div class="card-body p-4">

                    <div class="d-flex justify-content-between align-items-center mb-4">
                        <span class="badge rounded-pill bg-light text-dark border p-2 px-3">
                            <i class="fa-solid fa-tag me-1 text-danger"></i>
                            <%= listing.category.split('_').map(word=> word.charAt(0).toUpperCase() +
                                word.slice(1)).join(' ') %>
                        </span>

                        <small class="text-muted">
                            Hosted by <span class="fw-bold text-dark">@<%= listing.owner.username %></span>
                        </small>
                    </div>

                    <div class="mb-4">
                        <p class="card-text lead text-secondary" style="font-size: 1.1rem;">
                            "<%= listing.description %>"
                        </p>
                    </div>

                    <hr class="text-muted opacity-25">

                    <div class="row mt-3">
                        <div class="col-12 col-md-6 mb-3">
                            <div class="d-flex align-items-center">
                                <div class="bg-danger text-white rounded-circle p-2 d-flex justify-content-center align-items-center"
                                    style="width: 40px; height: 40px;">
                                    <i class="fa-solid fa-indian-rupee-sign"></i>
                                </div>
                                <div class="ms-3">
                                    <small class="text-muted d-block">Price</small>
                                    <span class="fs-5 fw-bold">&#8377; <%= listing.price.toLocaleString("en-IN") %>
                                            </span> <span class="text-muted">/ night</span>
                                </div>
                            </div>
                        </div>

                        <div class="col-12 col-md-6">
                            <div class="d-flex align-items-center">
                                <div class="bg-dark text-white rounded-circle p-2 d-flex justify-content-center align-items-center"
                                    style="width: 40px; height: 40px;">
                                    <i class="fa-solid fa-location-dot"></i>
                                </div>
                                <div class="ms-3">
                                    <small class="text-muted d-block">Location</small>
                                    <span class="fw-semibold">
                                        <%= listing.location %>, <%= listing.country %>
                                    </span>
                                </div>
                            </div>
                        </div>
                    </div>

                </div>
            </div>

            <% if (currUser && currUser._id.equals(listing.owner._id)) { %>
                <div class="d-flex justify-content-center gap-3 mb-3 mt-4">
                    <a href="/listings/<%= listing._id %>/edit" class="btn btn-dark edit-btn">Edit</a>
                    <form class="delete-form" method="POST" action="/listings/<%= listing._id %>?_method=DELETE">
                        <button class="btn btn-outline-danger delete-btn">Delete</button>
                    </form>
                </div>
                <hr>
                <% } %>

                    <div class="col-12 mb-3 mt-4">
                        <% if (currUser) { %>
                            <h4>Write a Review</h4>
                            <form action="/listings/<%= listing._id %>/reviews" method="POST" novalidate
                                class="needs-validation">

                                <div class="mb-3 mt-3">
                                    <label class="form-label">Rating</label>
                                    <fieldset class="starability-growRotate">
                                        <input type="radio" class="input-no-rate" name="review[rating]" value="1"
                                            checked />
                                        <input type="radio" id="rate1" name="review[rating]" value="1" />
                                        <label for="rate1">1 star</label>
                                        <input type="radio" id="rate2" name="review[rating]" value="2" />
                                        <label for="rate2">2 stars</label>
                                        <input type="radio" id="rate3" name="review[rating]" value="3" />
                                        <label for="rate3">3 stars</label>
                                        <input type="radio" id="rate4" name="review[rating]" value="4" />
                                        <label for="rate4">4 stars</label>
                                        <input type="radio" id="rate5" name="review[rating]" value="5" />
                                        <label for="rate5">5 stars</label>
                                    </fieldset>
                                </div>

                                <div class="mb-3 mt-3">
                                    <label class="form-label">Comments</label>
                                    <textarea name="review[comment]" rows="5"
                                        class="form-control border border-secondary" required></textarea>
                                    <div class="invalid-feedback">Please add some comments for review</div>
                                </div>

                                <button class="btn add-btn btn-outline-dark mt-3">Submit</button>
                            </form>
                            <hr>
                            <% } %>

                                <% if (listing.reviews.length) { %>
                                    <h3>All Reviews</h3>
                                    <p class="mb-4">
                                        <strong>
                                            <%= avgRating %>/5
                                        </strong>
                                        <% for (let i=1; i <=5; i++) { %>
                                            <% if (i <=Math.round(avgRating)) { %> &#9733; <% } else { %> &#9734; <% }
                                                        %>
                                                        <% } %>
                                    </p>

                                    <div class="row row-cols-2 row-cols-md-3 row-cols-lg-4 g-3">
                                        <% for (let review of listing.reviews) { %>
                                            <% const date=review.createdAt; const
                                                monthYear=date.toLocaleString("default", { month: "short" ,
                                                year: "numeric" }); %>

                                                <div class="col">
                                                    <div class="card h-100 review border-0 shadow-sm">
                                                        <div class="card-body">
                                                            <h5 class="card-title"><i>@<%= review.author.username %></i>
                                                            </h5>
                                                            <p class="card-text text-muted small">
                                                                <%= monthYear %>
                                                            </p>
                                                            <p class="card-text">
                                                                <%= review.rating %> &#9733;
                                                            </p>
                                                            <p class="card-text">
                                                                <%= review.comment %>
                                                            </p>

                                                            <% if (currUser && review.author &&
                                                                review.author._id.equals(currUser._id)) { %>
                                                                <form class="mt-3 delete-ka-btn" method="POST"
                                                                    action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE">
                                                                    <button
                                                                        class="btn btn-sm btn-dark review-delete">Delete</button>
                                                                </form>
                                                                <% } %>
                                                        </div>
                                                    </div>
                                                </div>
                                                <% } %>
                                    </div>
                                    <br>
                                    <% } %>
                    </div>
        </div>
    </div>

    <% if (listing.co_ordinates) { %>
        <div class="container-fluid mb-4">
            <div class="row justify-content-center">
                <div class="col-12 col-md-8 text-center">
                    <h3>Where you'll be</h3>
                    <div id="map" style="width: 100%; height: 400px; border-radius: 10px;"
                        data-lng="<%= listing.co_ordinates.lng %>" data-lat="<%= listing.co_ordinates.ltd %>"
                        data-title="<%= listing.title %>">
                    </div>
                </div>
            </div>
        </div>
        <% } %>

            <script src="/js/show.js"></script>
            <script>
                window.MAP_API_KEY = "<%= process.env.MAP_API_KEY %>";
            </script>
            <script src="/js/map.js"></script>