<% layout("/layouts/boilerplate") -%>

<body>
    <div class="row mt-3">
        <div class="col-8 offset-3">
    <h2 class="col-8 offset-2">Listing Details</h2>

    <div class="card col-6 offset-2 show-card">
        <img src="<%= listing.image %>" class="card-img-top show-img" alt="listing_image">
        <div class="card-body">
            <p class="card-text">
                <b><%= listing.title %></b> <br>
                <%= listing.description %> <br>
                &#8377; <%= listing.price.toLocaleString("en-IN") %> <br>
                <%= listing.location %> <br>
                <%= listing.country %> <br>
            </p>
        </div>
    </div>

    <br>
    <div class="btns">
        <a href="/listings/<%= listing._id %>/edit" class="btn btn-dark edit-btn col-1 offset-2">Edit</a>

        <form class="delete-form" method="POST" action="/listings/<%=listing._id%>?_method=DELETE">
            <button class="delete btn btn-dark delete-btn offset-4">Delete</button>
        </form>
    </div>
    
    <br><br>
    </div>
    </div>
    <script src="/js/show.js"></script>
</body>