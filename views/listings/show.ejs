<% layout("/layouts/boilerplate") -%>

        <div class="row mt-3">
            <div class="col-8 offset-3">

                <h2 class="col-8 offset-2">
                    <%= listing.title %>
                </h2>

                <div class="card col-6 offset-2 show-card listing-card">
                    <img src="<%= listing.image.url %>" class="card-img-top show-img" alt="listing_image">

                    <div class="card-body">
                        <p class="card-text">
                            Owned By <i>
                                <%= listing.owner.username %>
                            </i>
                        </p>

                        <p class="card-text">
                            <%= listing.description %>
                        </p>

                        <p class="card-text">
                            &#8377; <%= listing.price.toLocaleString("en-IN") %> / night
                        </p>

                        <p class="card-text">
                            <%= listing.location %>
                        </p>
                        <p class="card-text">
                            <%= listing.country %>
                        </p>
                    </div>
                </div>

                <% if (currUser && currUser._id.equals(listing.owner._id)) { %>
                    <div class="btns">
                        <a href="/listings/<%= listing._id %>/edit"
                            class="btn btn-dark edit-btn col-1 offset-2">Edit</a>

                        <form class="delete-form" method="POST" action="/listings/<%= listing._id %>?_method=DELETE">
                            <button class="delete btn btn-dark delete-btn offset-4">Delete</button>
                        </form>
                    </div>
                    <br>
                    <hr>
                    <% } %>

                        <div class="col-6 offset-2 show-card">

                            <% if (currUser) { %>
                                <h4>Write a Review</h4>

                                <form action="/listings/<%= listing._id %>/reviews" method="POST" novalidate
                                    class="needs-validation">

                                    <div class="mb-3 mt-3">
                                        <label class="form-label">Rating</label>
                                        <fieldset class="starability-growRotate">
                                            <input type="radio" class="input-no-rate" name="review[rating]" value="1"
                                                checked />
                                            <input type="radio" id="rate1" name="review[rating]" value="1" />
                                            <label for="rate1">1 star</label>
                                            <input type="radio" id="rate2" name="review[rating]" value="2" />
                                            <label for="rate2">2 stars</label>
                                            <input type="radio" id="rate3" name="review[rating]" value="3" />
                                            <label for="rate3">3 stars</label>
                                            <input type="radio" id="rate4" name="review[rating]" value="4" />
                                            <label for="rate4">4 stars</label>
                                            <input type="radio" id="rate5" name="review[rating]" value="5" />
                                            <label for="rate5">5 stars</label>
                                        </fieldset>
                                    </div>

                                    <div class="mb-3 mt-3">
                                        <label class="form-label">Comments</label>
                                        <textarea name="review[comment]" rows="5"
                                            class="form-control border border-secondary" required></textarea>
                                        <div class="invalid-feedback">
                                            Please add some comments for review
                                        </div>
                                    </div>

                                    <button class="btn btn-outline-dark mt-3 add-btn">Submit</button>
                                </form>
                                <hr>
                                <% } %>

                                    <% if (listing.reviews.length) { %>

                                        <h4>All Reviews</h4>
                                        <p class="mb-4 offset-4">
                                            <strong>
                                                <%= avgRating %>/5
                                            </strong>
                                            <% for (let i=1; i <=5; i++) { %>
                                                <% if (i <=Math.round(avgRating)) { %>
                                                    &#9733;
                                                    <% } else { %>
                                                        &#9734;
                                                        <% } %>
                                                            <% } %>
                                        </p>

                                        <div class="row">
                                            <% for (let review of listing.reviews) { %>
                                                <% const date=review.createdAt; const
                                                    monthYear=date.toLocaleString("default", { month: "short" ,
                                                    year: "numeric" }); %>

                                                    <div class="card col-5 ms-3 mb-3">
                                                        <div class="card-body">
                                                            <h5 class="card-title">
                                                                <i>@<%= review.author.username %></i>
                                                            </h5>
                                                            <p class="card-text">
                                                                <%= monthYear %>
                                                            </p>
                                                            <p class="card-text">
                                                                <%= review.rating %> &#9733;
                                                            </p>
                                                            <p class="card-text">
                                                                <%= review.comment %>
                                                            </p>
                                                        </div>

                                                        <% if (currUser && review.author &&
                                                            review.author._id.equals(currUser._id)) { %>
                                                            <form class="mb-3 mt-3" method="POST"
                                                                action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE">
                                                                <button class="btn btn-sm btn-dark">Delete</button>
                                                            </form>
                                                            <% } %>
                                                    </div>
                                                    <% } %>
                                        </div>

                                        <% } %>
                        </div>

                        <br><br>
            </div>
        </div>

        <% if (listing.co_ordinates) { %>
            <div class="container-fluid mb-4 ms-5">
                <div class="row justify-content-center">
                    <div class="col-auto">
                        <h4>Where you'll be</h4><br>
                        <div id="map" style="width:600px;height:400px;" data-lng="<%= listing.co_ordinates.lng %>"
                            data-lat="<%= listing.co_ordinates.ltd %>" data-title="<%= listing.title %>">
                        </div>
                    </div>
                </div>
            </div>
        <% } %>

        <script src="/js/show.js"></script>
        <script>
            window.MAP_API_KEY = "<%= process.env.MAP_API_KEY %>";
        </script>
        <script src="/js/map.js"></script>