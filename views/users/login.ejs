<% layout("/layouts/boilerplate") %>

    <div class="row mt-3">

        <div class="col-11 col-md-7 col-lg-4 mx-auto">

            <h1 class="text-center mb-4">Login to WanderLust</h1>

            <form action="/login" method="POST" class="needs-validation" novalidate>
                <div class="mb-3">
                    <label for="username" class="form-label">Username</label>
                    <input type="text" name="username" class="form-control border border-2 border-secondary rounded-2"
                        id="username" required>
                </div>

                <div class="mb-3">
                    <label for="password" class="form-label">Password</label>
                    <input type="password" name="password"
                        class="form-control border border-2 border-secondary rounded-2" id="password" required>
                </div>

                <button class="btn btn-dark add-btn mt-3 mb-3 w-100">Login</button>
            </form>

        </div>
    </div>